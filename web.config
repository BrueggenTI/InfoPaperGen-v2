<?xml version="1.0" encoding="utf-8"?>
<!--
     Azure App Service web.config für Node.js Anwendungen
     Diese Datei wird nur benötigt, falls das automatische App Service Setup nicht funktioniert
-->
<configuration>
  <system.webServer>
    <!-- Leitet alle Requests an die Node.js App weiter -->
    <handlers>
      <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <!-- URL Rewrite für Single Page Application -->
    <rewrite>
      <rules>
        <!-- Node.js App als Default Handler -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^dist/index.js\/debug[\/]?" />
        </rule>
        
        <!-- Statische Dateien -->
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}"/>
        </rule>
        
        <!-- API Routes -->
        <rule name="api" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^api\/.*" />
          <action type="Rewrite" url="dist/index.js"/>
        </rule>
        
        <!-- Alle anderen Requests an Node.js -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="dist/index.js"/>
        </rule>
      </rules>
    </rewrite>
    
    <!-- Node.js spezifische Einstellungen -->
    <iisnode 
      node_env="production"
      nodeProcessCommandLine="node"
      interceptor="dist/index.js"
      watchedFiles="web.config;*.js"
      loggingEnabled="true"
      logDirectoryNameSuffix="logs"
      debuggingEnabled="false"
      devErrorsEnabled="false"
      promoteServerVars="REMOTE_ADDR,SERVER_PORT,HTTP_X_FORWARDED_PROTO"
    />
    
    <!-- Fehlerseiten -->
    <httpErrors>
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" responseMode="ExecuteURL" path="/404" />
    </httpErrors>
    
    <!-- Security Headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>