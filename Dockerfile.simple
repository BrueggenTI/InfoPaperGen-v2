# EINFACHE DOCKERFILE - Alternative f체r Azure wenn Produktions-Version fehlschl채gt
# Minimaler Ansatz mit Chrome Installation
FROM node:18-slim

# Root f체r Installation
USER root

# Arbeitsverzeichnis
WORKDIR /usr/src/app

# System Update
RUN apt-get update

# Minimale Chrome Dependencies
RUN apt-get install -y \
    wget \
    gnupg \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libcups2 \
    libdbus-1-3 \
    libgbm1 \
    libgtk-3-0 \
    libnss3 \
    libx11-xcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libxss1 \
    --no-install-recommends

# Chrome Installation - Direkte Methode
RUN wget -q -O chrome.deb https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb \
    && apt-get install -y ./chrome.deb \
    && rm chrome.deb \
    && google-chrome --version

# Aufr채umen
RUN rm -rf /var/lib/apt/lists/*

# App Dependencies
COPY package*.json ./
RUN npm ci --only=production

# App Code
COPY . .
RUN npm run build

# User Setup
RUN groupadd -g 1001 nodejs \
    && useradd -r -g nodejs -u 1001 nodejs \
    && chown -R nodejs:nodejs /usr/src/app
USER nodejs

# Environment
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# Port und Start
EXPOSE 8080
CMD ["npm", "start"]